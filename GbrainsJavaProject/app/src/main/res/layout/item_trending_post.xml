<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingTop="14dp"
        android:paddingBottom="@dimen/_6sdp">


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imNew"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_marginEnd="10dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/image_splash"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvTitleNews"
            app:layout_constraintBottom_toBottomOf="@+id/tvContentNew"
            app:sriv_left_bottom_corner_radius="8dp"
            app:sriv_left_top_corner_radius="8dp"
            app:sriv_right_bottom_corner_radius="8dp"
            app:sriv_right_top_corner_radius="8dp" />


        <TextView
            android:id="@+id/tvTitleNews"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/primary"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/imNew"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tool:text="Thử tướng: tiếc tục giảm giãn cách " />

        <TextView
            android:id="@+id/tvContentNew"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="@dimen/_11ssp"
            android:layout_marginTop="@dimen/_6sdp"
            app:layout_constraintEnd_toStartOf="@+id/imNew"
            app:layout_constraintStart_toStartOf="@+id/tvTitleNews"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleNews"
            tool:text="Current primary key (PK) restrictions: Currently, entities must have a long or Long property as their primary key. This is recommended practice for Android and SQLite. " />


        <TextView
            android:id="@+id/tvTotalShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintEnd_toEndOf="@+id/imNew"
            app:layout_constraintTop_toBottomOf="@+id/tvContentNew"
            tool:text="3"
            app:drawableStartCompat="@drawable/ic_share" />

        <TextView
            android:id="@+id/tvTotalView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="2dp"
            android:paddingStart="0dp"
            android:paddingEnd="@dimen/_10sdp"
            android:textSize="@dimen/_8ssp"
            app:layout_constraintEnd_toStartOf="@+id/tvTotalShare"
            app:layout_constraintTop_toTopOf="@+id/tvTotalShare"
            tool:text="3"
            app:drawableStartCompat="@drawable/ic_view" />

        <TextView
            android:id="@+id/tvDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/_6sdp"
            android:paddingStart="0dp"
            android:textSize="@dimen/_8ssp"
            app:layout_constraintEnd_toStartOf="@+id/tvTotalView"
            app:layout_constraintTop_toTopOf="@+id/tvTotalShare"
            tool:text="6/3/2020" />

        <TextView
            android:id="@+id/tvArticleType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="0dp"
            android:paddingEnd="@dimen/_6sdp"
            android:textColor="@color/primary"
            android:textSize="@dimen/_8ssp"
            app:layout_constraintEnd_toStartOf="@+id/tvDateTime"
            app:layout_constraintStart_toStartOf="@+id/tvTitleNews"
            app:layout_constraintTop_toTopOf="@+id/tvTotalShare"
            tool:text="Tim mạch" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
